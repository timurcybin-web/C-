using System;
using System.Linq;

class Program
{
    static void Main()
    {
        // Исходный массив
        var arr = new int[] {1, 3, 5, 8, 9, 1, 6, 4, 7, 8, 9, 2, 5, 2, 7, 8, 0};
        
        // Группировка по четности и сортировка каждой группы по возрастанию
        var result = arr
            .GroupBy(x => x % 2)
            .Select(g => new
            {
                Key = g.Key,
                GroupName = g.Key == 0 ? "Четные" : "Нечетные",
                Numbers = g.OrderBy(x => x)
            })
            .OrderBy(g => g.Key); // Сортировка групп по ключу (0 - четные, 1 - нечетные)
        
        // Вывод результата
        Console.WriteLine("Группировка по четности с сортировкой по возрастанию:");
        foreach (var group in result)
        {
            Console.WriteLine($"\n{group.GroupName} числа:");
            Console.WriteLine(string.Join(", ", group.Numbers));
        }
    }
}
