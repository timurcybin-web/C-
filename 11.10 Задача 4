using System;
using System.Collections;
using System.Collections.Generic;

class RandomNumbersCollection : IEnumerable<int>
{
    private readonly Random random = new Random();

    public IEnumerator<int> GetEnumerator()
    {
        while (true) // бесконечная последовательность
        {
            yield return random.Next(); // можно задать диапазон, например Next(0, 100)
        }
    }

    IEnumerator IEnumerable.GetEnumerator()
    {
        return GetEnumerator();
    }
}

class Program
{
    static void Main()
    {
        var numbers = new RandomNumbersCollection();

        int count = 0;
        foreach (int n in numbers)
        {
            Console.WriteLine(n);
            count++;

            if (count >= 10) // ограничим, чтобы не зациклиться
                break;
        }
    }
}
