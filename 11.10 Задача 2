using System;
using System.Collections.Generic;

// Класс Animal
class Animal
{
    public string Name { get; set; }
    public int Age { get; set; }

    public Animal(string name, int age)
    {
        Name = name;
        Age = age;
    }

    public override string ToString()
    {
        return $"{Name}, {Age} лет";
    }
}

// Компаратор по имени
class AnimalNameComparer : IComparer<Animal>
{
    public int Compare(Animal x, Animal y)
    {
        if (x == null || y == null) return 0;
        return string.Compare(x.Name, y.Name, StringComparison.Ordinal);
    }
}

// Компаратор по возрасту
class AnimalAgeComparer : IComparer<Animal>
{
    public int Compare(Animal x, Animal y)
    {
        if (x == null || y == null) return 0;
        return x.Age.CompareTo(y.Age);
    }
}

class Program
{
    static void Main()
    {
        var animals = new List<Animal>
        {
            new Animal("Кот", 3),
            new Animal("Собака", 5),
            new Animal("Попугай", 2),
            new Animal("Черепаха", 10)
        };

        Console.WriteLine("Исходный список:");
        foreach (var a in animals)
            Console.WriteLine(a);

        // Сортировка по имени
        animals.Sort(new AnimalNameComparer());
        Console.WriteLine("\nСортировка по имени:");
        foreach (var a in animals)
            Console.WriteLine(a);

        // Сортировка по возрасту
        animals.Sort(new AnimalAgeComparer());
        Console.WriteLine("\nСортировка по возрасту:");
        foreach (var a in animals)
            Console.WriteLine(a);
    }
}
