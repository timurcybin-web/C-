using System;
using System.Linq;
using System.Collections.Generic;

class Program
{
    static void Main()
    {
        // Исходный массив
        var arr = new int[] {1, 3, 5, 8, 9, 1, 6, 4, 7, 8, 9, 2, 5, 2, 7, 8, 0};
        
        // Группировка по четности (0 - четные, 1 - нечетные)
        var result = arr
            .GroupBy(x => x % 2)
            .Select(g => new
            {
                key = g.Key,
                values = g.AsEnumerable(),
                summ = g.Sum()
            });
        
        // Вывод результата
        Console.WriteLine("Результат группировки по четности:");
        foreach (var group in result)
        {
            string groupName = group.key == 0 ? "Четные" : "Нечетные";
            Console.WriteLine($"Группа: {groupName} (key: {group.key})");
            Console.WriteLine($"Числа: {string.Join(", ", group.values)}");
            Console.WriteLine($"Сумма: {group.summ}");
            Console.WriteLine();
        }
    }
}
